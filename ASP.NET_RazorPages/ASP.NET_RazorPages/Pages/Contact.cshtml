            </section>


            <section class="contact-us" data-aos="zoom-in-up" data-aos-once="true">
                <div class="container">
                    <div class="row">
                        <div class="contact__wrapper">
                            <div class="col-lg-3 social__info">
                                <h5>Get in touch</h5>

                                <ul class="list-unstyled">
                                    <li>
                                        <a asp-page="">
                                            <i class="fa-brands fa-facebook-f"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-page="">
                                            <i class="fa-brands fa-twitter"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-page="">
                                            <i class="fa-brands fa-instagram"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-8 contact-form">
                                <form>
                                    <div class="form-group">
                                        <label class="form-label">Your firstname *</label>

                                        <input type="text" class="border-bottom">
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label">Your lastname *</label>

                                        <input type="text" class="border-bottom">
                                    </div>

                                    <div class="form-group width">
                                        <label class="form-label">Your email *</label>

                                        <input type="email" class="border-bottom">
                                    </div>

                                    <div class="form-group width">
                                        <label class="form-label">Your message for us *</label>

                                        <textarea class="border-bottom" cols="30" rows="4"></textarea>
                                    </div>

                                    <div class="btn-form width d-flex">
                                        <button type="submit" class="btn-primary">
                                            Send Message
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
